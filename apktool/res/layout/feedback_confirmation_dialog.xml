<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:background="@color/ghs_primary_color" android:layout_width="fill_parent" style="@style/FeedbackDialogHeader">
        <ImageView android:id="@id/feedback_close" android:background="@drawable/close_button" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/desc_feedback_close" style="@style/FeedbackDialogCloseButton" />
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/ghs_background_no_color" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <com.grubhub.AppBaseLibrary.android.views.GHSTextView android:textColor="@color/ghs_primary_text_color" android:gravity="center" android:background="@color/ghs_background_no_color" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/feedback_confirmation_title" style="@style/FeedbackConfirmationTitle" />
        <com.grubhub.AppBaseLibrary.android.views.GHSButton android:textColor="@color/text_rounded_button_selector_inverted" android:id="@id/feedback_confirmation_positive" android:background="@drawable/bg_rounded_button_selector_inverted" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/feedback_confirmation_positive" style="@style/FeedbackConfirmationPositiveButton" />
        <com.grubhub.AppBaseLibrary.android.views.GHSTextView android:textColor="@color/ghs_actionable_color" android:layout_gravity="center_horizontal" android:id="@id/feedback_confirmation_negative" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback_confirmation_negative" style="@style/FeedbackConfirmationNegativeButton" />
    </LinearLayout>
</LinearLayout>