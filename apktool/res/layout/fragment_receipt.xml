        <com.grubhub.AppBaseLibrary.android.views.GHSTextView android:textColor="@color/ghs_primary_text_color" android:id="@id/receipt_order_instructions" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/ReceiptOrderInstructions" />
    </LinearLayout>
    <View android:id="@id/receipt_order_instructions_divider" style="@style/CheckoutDivider" />
    <com.grubhub.AppBaseLibrary.android.views.GHSTextView android:textColor="@color/ghs_primary_text_color" android:id="@id/receipt_restaurant_name" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/CheckoutSectionSubHeader" />
