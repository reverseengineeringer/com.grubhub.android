        <com.grubhub.AppBaseLibrary.android.views.GHSTextView android:textColor="@color/ghs_primary_text_color" android:id="@id/receipt_future_order_submission_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/receipt_future_order_submission_header" android:layout_alignLeft="@id/receipt_future_order_submission_header" />
