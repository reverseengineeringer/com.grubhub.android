<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/nav_action_item_selector" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:padding="@dimen/nav_item_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@id/nav_icon_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" />
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/nav_text_left_padding" android:layout_toRightOf="@id/nav_icon_image" android:layout_centerVertical="true">
            <com.grubhub.AppBaseLibrary.android.views.GHSTextView android:textColor="@color/text_nav_action_selector" android:id="@id/nav_call_to_action_text" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/GHSNavListItemName" />
            <com.grubhub.AppBaseLibrary.android.views.GHSTextView android:textColor="@color/text_nav_description_selector" android:id="@id/nav_description_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/nav_call_to_action_text" style="@style/GHSNavListItemDescription" />
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@id/nav_divider" android:layout_width="fill_parent" style="@style/NavigationActionItemDivider" />
</LinearLayout>