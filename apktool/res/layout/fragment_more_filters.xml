<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/ghs_background_no_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:background="@drawable/bg_more_filters_resetall" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.grubhub.AppBaseLibrary.android.views.GHSButton android:id="@id/more_filter_reset_all" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/search_filter_reset_all" android:layout_alignParentRight="true" style="@style/FilterResetButton" />
    </RelativeLayout>
