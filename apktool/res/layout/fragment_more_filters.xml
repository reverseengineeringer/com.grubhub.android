            <FrameLayout android:id="@id/distance_filter_fragment" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <FrameLayout android:id="@id/options_filter_fragment" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <FrameLayout android:id="@id/future_ordering_filter_fragment" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <View android:layout_width="fill_parent" android:layout_height="@dimen/search_filter_section_padding" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>